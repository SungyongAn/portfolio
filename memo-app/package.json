{
  "name": "memo-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . MemoApp --platform=darwin,win32,linux --arch=x64 --out=release",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.yourname.memo-app",
    "productName": "MemoApp",
    "files": [
      "main.js",
      "preload.js",
      "memo.html",
      "memo.css"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  }
}
